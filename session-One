//Desenvolva um algoritmo que solicite a entrada de um número e calcule se o número é par ou impar.

public string ImparPar(int numero)
  {
	  if(numero % 2 == 0)
	  {
		  return "par";
	  }
	  else
	  {
	    return "impar";
	  }
  }


//Desenvolva um algoritmo que permita a entrada do nome do usuário e retorne o mesmo.

public string NomeUsuario(string Nome)
 {
   return Nome;
 }

